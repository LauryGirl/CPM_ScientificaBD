@model  Data.Inscription



<section class="section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 element-animate">
            <div class="col-md-25 text-center mb-5">
                <h2 class="text-uppercase heading border-bottom mb-4">Crear Inscripción</h2>
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-5 form-group">
                            <p class="mb-0 lead">
                                <label for="Name" style="color:black">Nombre del Producto</label><br />
                                @Html.DropDownList("ProductId", null, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-5 form-group">
                            <p class="mb-0 lead">
                                <label for="Date" style="color:black">Fecha</label>
                                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-5 form-group">
                            <p class="mb-0 lead">
                                <label for="Validity" style="color:black">Vigencia</label>
                                @Html.EditorFor(model => model.Validity, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Validity, "", new { @class = "text-danger" })
                            </p>
                        </div>
                    </div>
                    <p class="mb-0 lead">
                        <button class="btn btn-lg  fa fa-check-square-o fa-lg " type="submit" style="color:green"></button>
                    </p>
                }
            </div>
        </div>
    </div>

</section>

<section class="cover_1" style="background-image: url(/myimag/mole1.jpg);">
    <div class="container">
    </div>
</section>


@model Data.Wail

<section class="section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 element-animate">
            <div class="col-md-8 text-center mb-5">
                <h2 class="text-uppercase heading border-bottom mb-4">Detalles</h2>
                <br />
                <p class="mb-0 lead">
                    <label for="Name" style="color:black">Nombre del Producto:</label>
                    @Html.DisplayFor(model => model.Product.Name)
                </p>
                <p class="mb-0 lead">
                    <label for="CecmedInfo" style="color:black">Información del Cecmed:</label>
                    @Html.DisplayFor(model => model.CecmedInfo)
                </p>
                <p class="mb-0 lead">
                    <label for="MakerInfo" style="color:black">Información del Fabricante:</label>
                    @Html.DisplayFor(model => model.MakerInfo)
                </p>
                <p class="mb-0 lead">
                    <label for="Closure" style="color:black">Conclusiones de la Información:</label>
                    @Html.DisplayFor(model => model.Closure)
                </p>
                <p class="mb-0 lead">
                    <label for="_state" style="color:black">Estado:</label>
                    @Html.DisplayFor(model => model._state)
                </p>
            </div>
        </div>
    </div>
</section>


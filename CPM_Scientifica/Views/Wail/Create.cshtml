@model  Data.Wail

<section class="section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 element-animate">
            <div class="col-md-25 text-center mb-5">
                <h2 class="text-uppercase heading border-bottom mb-4">Crear Queja</h2>
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="Name" style="color:black">Nombre del Producto</label><br />
                                @Html.DropDownList("ProductId", null, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ProductId, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="CecmedInfo" style="color:black">Información del Cecmed</label>
                                @Html.EditorFor(model => model.CecmedInfo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CecmedInfo, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="MakerInfo" style="color:black">Información del Fabricante</label>
                                @Html.EditorFor(model => model.MakerInfo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MakerInfo, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="Closure" style="color:black">Conclusiones</label>
                                @Html.EditorFor(model => model.Closure, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Closure, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="_state" style="color:black">Estado</label>
                                @Html.DropDownListFor(model => model._state, new
                                List<SelectListItem>()
                                {
                                    new SelectListItem(){Selected = false, Text = "Procede", Value = "Procede" },
                                    new SelectListItem(){Selected = false, Text = "No procede", Value = "No procede" },
                                    new SelectListItem(){Selected = false, Text = "Oportunidad de mejora", Value = "Oportunidad de mejora" },
                                    new SelectListItem(){Selected = false, Text = "Acción Preventiva", Value = "Acción Preventiva" },
                                    new SelectListItem(){Selected = false, Text = "Otro", Value = "Otro" },
                                }, "Selecciona", new { @id = "_state", @class = "form-control" })
                                @Html.ValidationMessageFor(model => model._state, "", new { @class = "text-danger" })
                            </p>
                        </div>
                    </div>
                    <p class="mb-0 lead">
                        <button class="btn btn-lg  fa fa-check-square-o fa-lg " type="submit" style="color:green"></button>
                    </p>
                }
            </div>
        </div>
    </div>

</section>

<section class="cover_1" style="background-image: url(/myimag/mole1.jpg);">
    <div class="container">
    </div>
</section>


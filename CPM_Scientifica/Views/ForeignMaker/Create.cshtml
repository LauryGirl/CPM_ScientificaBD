@model Data.ForeignMaker

<section class="section bg-light">
    <div class="container">
        <div class="row justify-content-center mb-5 element-animate">
            <div class="col-md-25 text-center mb-5">
                <h2 class="text-uppercase heading border-bottom mb-4">Crear Fabricante Extranjero</h2>
                <br />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="Name" style="color:black">Nombre del Fabricante</label>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="Country" style="color:black">País</label>
                                @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="AuthorityOfCommerceCamera" style="color:black">Aut. de Cámara de Comercio(ACC)</label>
                                @Html.EditorFor(model => model.AuthorityOfCommerceCamera, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AuthorityOfCommerceCamera, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="AuthorityOfCommerceCameraDate" style="color:black">Fecha de la ACC</label>
                                @Html.EditorFor(model => model.AuthorityOfCommerceCameraDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.AuthorityOfCommerceCameraDate, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="LifeTimeYearsACC" style="color:black">Tiempo de Vida de la ACC</label>
                                @Html.EditorFor(model => model.LifeTimeYearsACC, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LifeTimeYearsACC, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="GoodPracticesDocumentation" style="color:black">Doc. de Buenas Prácticas(DBP)</label>
                                @Html.EditorFor(model => model.GoodPracticesDocumentation, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GoodPracticesDocumentation, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="GoodPracticesDocumentationDate" style="color:black">Fecha de la DBP</label>
                                @Html.EditorFor(model => model.GoodPracticesDocumentationDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.GoodPracticesDocumentationDate, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="LifeTimeYearsGPD" style="color:black">Tiempo de Vida de la DBP</label>
                                @Html.EditorFor(model => model.LifeTimeYearsGPD, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LifeTimeYearsGPD, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="CertificateFreeSale" style="color:black">Cer. de Libre Venta(CLV)</label>
                                @Html.EditorFor(model => model.CertificateFreeSale, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CertificateFreeSale, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="CertificateFreeSaleDate" style="color:black">Fecha del CLV</label>
                                @Html.EditorFor(model => model.CertificateFreeSaleDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CertificateFreeSaleDate, "", new { @class = "text-danger" })
                            </p>
                        </div>
                        <div class="col-md-4 form-group">
                            <p class="mb-0 lead">
                                <label for="LifeTimeYearsCFS" style="color:black">Tiempo de Vida del CLV</label>
                                @Html.EditorFor(model => model.LifeTimeYearsCFS, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LifeTimeYearsCFS, "", new { @class = "text-danger" })
                            </p>
                        </div>
                    </div>
                    <p class="mb-0 lead">
                        <button class="btn btn-lg  fa fa-check-square-o fa-lg " type="submit" style="color:green"></button>
                    </p>
                }
            </div>
        </div>
    </div>

</section>

<section class="cover_1" style="background-image: url(/myimag/mole1.jpg);">
    <div class="container">
    </div>
</section>

